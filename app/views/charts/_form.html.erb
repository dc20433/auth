    <%= f.label :soap, 'S.O.A.P.' %><br />
    <%= f.text_area :soap, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :acuList, 'Acupoints Used:' %><br />
    <%= f.text_field :acuList, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :cMedList, 'Chinese Medicines:' %><br />
    <%= f.text_field :cMedList, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :cForList, 'Formulae:' %><br />
    <%= f.text_field :cForList, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :oTreats, 'Other Treatments:' %><br />
    <%= f.text_field :oTreats, class:"form-control" %>
  </div>
  <%= f.number_field :regi_id, value: @regi.id, type:'hidden' %>
  <br>
  <div class="actions">
    <%= f.submit class:'btn btn-dark' %>
  </div>
<% end %>
