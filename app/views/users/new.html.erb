<h1 class="text-center">Sign up</h1>

<% if @user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with(model: @user) do |f| %>
  <div class="field">
    <strong><%= f.label :name, 'Name:' %></strong>
    <%= f.text_field :name, class:"form-control form-control-sm border-primary" %>
  </div>

  <div class="field">
    <strong><%= f.label :email, 'Email:' %></strong>
    <%= f.text_field :email, class:"form-control form-control-sm border-primary" %>
  </div>

  <% if @user.has_password? %>
    <div class="field">
      <strong><%= f.label :password, 'Password:' %></strong>
      <%= f.password_field :password, class:"form-control form-control-sm border-primary" %>
    </div>

    <div class="field">
      <strong><%= f.label :password_confirmation, 'Confirm password:' %></strong>
      <%= f.password_field :password_confirmation, class:"form-control form-control-sm border-primary" %>
    </div>
  <% end %>
<br>
  <%= f.submit "Sign Up", class:"btn btn-sm btn-outline-dark" %>

<% end %>