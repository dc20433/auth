<%= form_with(model: regi) do |form| %>
  <% if regi.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(regi.errors.count, "error") %> prohibited this regi from being saved:</h2>

      <ul>
        <% regi.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :lastNm, "Last Name:", style: "display: block" %>
    <%= form.text_field :lastNm, class: "form-control" %>
  </div>

  <div>
    <%= form.label :firstNm, "First Name:", style: "display: block" %>
    <%= form.text_field :firstNm, class: "form-control" %>
  </div>

  <div>
    <%= form.label :init, "Middle Inital:", style: "display: block" %>
    <%= form.text_field :init, class: "form-control" %>
  </div>

  <div>
    <%= form.label :gender, "Gender:", style: "display: block" %>
    <%= form.select :gender, Regi::GENDER_OPTIONS, class: "form-control" %>
  </div>

  <div>
    <%= form.label :dob, "Date of Birth:", style: "display: block" %>
    <%= form.date_field :dob, placeholder: "MM/DD/YYYY", class: "form-control" %>
  </div>

  <br>
  <div>
    <%= form.submit "Submit", class: "btn btn-sm col-md-3 btn-outline-primary" %>
  </div>
<% end %>
