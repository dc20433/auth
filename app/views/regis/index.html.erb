<h1 class="text-center">Patient Listing</h1>

<%= link_to "New Patient", new_regi_path, class: "btn btn-outline-dark col-md-2" %>
<%= link_to "Users", users_path, class: "btn btn-outline-info col-md-2" %>
<br><br>

<table class="table table-striped table-hover">
  <thead class="table-primary">
    <tr>
      <th>Last Name</th>
      <th>First Name</th>
      <th>M. Initial</th>
      <th>Gender</th>
      <th>Date of Birth</th>
      <th style="width:150px"></th>
    </tr>
  </thead>
<% @regis.sort_by{ |h| h[:lastNm] }.each do |regi| %>
  <tbody>
    <tr>
      <td><%= link_to regi.lastNm, regi_path(regi.id) %></td>
      <td><%= regi.firstNm %></td>
      <td><%= regi.init %></td>
      <td><%= regi.gender %></td>
      <td><%= regi.dob %></td>
      <td>
      <%= link_to 'Records', regi_patients_path(regi.id), class: "btn btn-outline-primary btn-sm" %>
      <%= link_to 'Charts', regi_charts_path(regi.id), class: "btn btn-outline-success btn-sm" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>